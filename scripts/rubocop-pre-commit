#!/usr/bin/env bash

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
NO_COLOR='\033[0m'
CLEAR_LINE='\r\033[K'

REPO_BASE_DIR="$(git rev-parse --show-toplevel)"

function add_corrections_to_commit() {
    # if a file is both a suspect and an innocent, this script is gonna need a lawyer
    if [ -n "$(comm -12 <(echo "${INNOCENTS}") <(echo "${SUSPECTS}"))" ]; then
      printf "\n${CLEAR_LINE}${GREEN}â“ But some of your files are only partially staged, so you'll need to add the fixes yourself and try again.${NO_COLOR}\n"
      exit 1
    fi

    # reopen stdin to make this interactive
    exec < /dev/tty
    trap "exec <&-" EXIT # close stdin when this script exits

    while read -p "Would you like to add those corrections to this commit? (Y/n) " yn; do
      case $yn in
        "") break;;
        [Yy] ) break;;
        [Nn] ) echo "Then add them yourself!"; exit 1;;
        * ) echo "Please answer y (yes) or n (no):" && continue;
      esac
    done

    # updating the index directly is not the safest thing,
    # but because we only add SUSPECTS and guard against situations
    # where files are partially committed, it should be alright
    git add -u ${SUSPECTS}
}

if ! command -v rubocop > /dev/null; then
  printf "${CLEAR_LINE}ğŸ’€${RED} Install Rubocop and be sure it is available on your PATH.${NO_COLOR}\n"
  printf "â„¹ï¸  Try 'gem install rubocop'\n"
  exit 1
fi

pushd "${REPO_BASE_DIR}"
  INNOCENTS="$(git diff --name-only --diff-filter=AMC | grep -i '.*\.rb' | sort)"
  SUSPECTS="$(git diff --cached --name-only --diff-filter=AMC | grep -i '.*\.rb' | sort)"
  if [ ! "${SUSPECTS}" ]; then
    exit 0
  fi

  printf "\nğŸš” Linting with Rubocop...\n"

  if rubocop --parallel --cache=true ${SUSPECTS}; then
    printf "${CLEAR_LINE}ğŸ‰${GREEN} Rubocop is appeased.${NO_COLOR}\n"
    exit 0
  fi

  printf "\n${CLEAR_LINE}${RED}ğŸ’€ Rubocop found some issues. Let's see if it can autocorrect the files you're trying to commit...${NO_COLOR}\n"

  if ! rubocop --auto-correct --cache=true ${SUSPECTS}; then
    printf "\n${CLEAR_LINE}${RED}ğŸ’€ Rubocop couldn't autocorrect everything! ğŸ˜­ ${NO_COLOR}\n"
    exit 1
  fi

  printf "\n${CLEAR_LINE}${GREEN}ğŸš”  Rubocop has autocorrected your transgressions!${NO_COLOR}\n"

  add_corrections_to_commit

  printf "${CLEAR_LINE}ğŸ‰${GREEN} Rubocop is appeased.${NO_COLOR}\n"
popd
